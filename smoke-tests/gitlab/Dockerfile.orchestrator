FROM gitlab/gitlab-runner:latest
RUN apt-get update && apt-get install -y --no-install-recommends curl jq git && rm -rf /var/lib/apt/lists/*
COPY smoke-tests/gitlab/orchestrate.sh /orchestrate.sh
COPY smoke-tests/gitlab/test-project/ /test-project/
RUN chmod +x /orchestrate.sh
RUN mkdir -p /etc/gitlab-runner
ENTRYPOINT ["/orchestrate.sh"]
